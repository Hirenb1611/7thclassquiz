<body>
  <h1>üß† Curriculum Quiz for Year 7 üéØ</h1>
  <form id="quizForm">
    <div id="quiz-container"></div>
    <button type="button" onclick="submitQuiz()" class="submit-btn">üìä Submit</button>
    <button type="reset" class="submit-btn" style="background-color:#ef5350;">‚ôªÔ∏è Reset</button>
  </form>
  <div id="result"></div>

  <script>
    const questions = [
      ["üî¢ What is the square root of 144?", ["11", "12", "14", "13"], "12"],
      ["üåç What is the capital of France?", ["Paris", "Berlin", "Madrid", "London"], "Paris"],
      ["üß™ What gas do plants breathe in?", ["Oxygen", "Hydrogen", "Carbon Dioxide", "Nitrogen"], "Carbon Dioxide"],
      ["üßÅ Which bakery is near Barham Park?", ["Greggs", "Cake Box", "Subway", "Costa"], "Greggs"],
      ["üìè 1 meter is how many centimeters?", ["10", "100", "1000", "50"], "100"],
      ["üß† Which part of the body controls thinking?", ["Heart", "Liver", "Brain", "Lungs"], "Brain"],
      ["üìö What is 5 x 5?", ["20", "25", "30", "15"], "25"],
      ["üè• Where does Mum sometimes work in Ruislip?", ["Ruislip Nursing Home", "Ruislip Bank", "Ruislip Cafe", "Ruislip College"], "Ruislip Nursing Home"],
      ["üî§ Which one is a noun?", ["Run", "Blue", "Chair", "Quickly"], "Chair"],
      ["ü§£ What sound does a cow make?", ["Meow", "Moo", "Woof", "Quack"], "Moo"],
      ["üî¢ What is 7 + 8?", ["15", "14", "13", "16"], "15"],
      ["üöÇ Which train line stops at Wembley Central?", ["Bakerloo", "Piccadilly", "Central", "Metropolitan"], "Bakerloo"],
      ["üîå What is the shortcut to copy in computer?", ["Ctrl + V", "Ctrl + X", "Ctrl + C", "Ctrl + P"], "Ctrl + C"],
      ["üë©‚Äç‚öïÔ∏è Which hospital is in Harrow?", ["Northwick Park", "Hillingdon", "Watford", "Chelsea"], "Northwick Park"],
      ["üîä What does 'volume' control on YouTube?", ["Brightness", "Sound", "Comments", "Zoom"], "Sound"],
      ["üçé What is healthy food?", ["Chips", "Chocolate", "Apple", "Cake"], "Apple"],
      ["üå¶Ô∏è What comes from clouds?", ["Rain", "Dirt", "Smoke", "Grass"], "Rain"],
      ["üè´ What is the colour of your school uniform?", ["Blue", "Grey", "Black", "White"], "Grey"],
      ["üí° What is the opposite of 'off'?", ["Down", "On", "High", "Out"], "On"],
      ["ü§© What is 10 x 10?", ["100", "10", "20", "50"], "100"]
    ];

    const quizContainer = document.getElementById("quiz-container");
    questions.forEach((q, index) => {
      let options = q[1].map(option => 
        `<label><input type='radio' name='q${index}' value='${option}'> ${option}</label>`
      ).join("<br>");
      quizContainer.innerHTML += `
        <div class='question' id='question${index}'>
          <p><strong>Q${index + 1}: ${q[0]}</strong></p>
          ${options}
          <div class='result-message' id='result${index}'></div>
        </div>
      `;
    });

    function submitQuiz() {
      let correct = 0;
      let wrong = 0;
      questions.forEach((q, index) => {
        const radios = document.getElementsByName("q" + index);
        let selected = "";
        radios.forEach(r => { if (r.checked) selected = r.value; });
        const resultDiv = document.getElementById("result" + index);
        if (selected === q[2]) {
          correct++;
          resultDiv.innerText = "‚úÖ Correct!";
          resultDiv.style.color = "green";
        } else {
          wrong++;
          resultDiv.innerHTML = `‚ùå Incorrect! Correct answer: <strong>${q[2]}</strong>`;
          resultDiv.style.color = "red";
        }
      });
      const total = correct + wrong;
      const percent = Math.round((correct / total) * 100);
      document.getElementById("result").innerHTML = `
        <table>
          <tr><th>Total</th><th>Correct</th><th>Wrong</th><th>Percentage</th></tr>
          <tr><td>${total}</td><td>${correct}</td><td>${wrong}</td><td>${percent}%</td></tr>
        </table>
      `;
    }
  </script>
