<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Year 7 Quiz</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 30px;
    }
    .question-box {
      margin-bottom: 20px;
    }
    .timer {
      font-weight: bold;
      color: red;
    }
    .option {
      margin: 8px 0;
      display: block;
    }
    .feedback {
      font-weight: bold;
      margin-top: 10px;
    }
    .result-box {
      margin-top: 30px;
    }
    button {
      padding: 10px 20px;
      margin-top: 20px;
      cursor: pointer;
    }
  </style>
</head>
<body>

  <h1>Year 7 Quiz</h1>
  <div id="quiz-container">
    <div id="timer" class="timer"></div>
    <div id="question" class="question-box"></div>
    <div id="options"></div>
    <div id="feedback" class="feedback"></div>
    <button id="next-btn" onclick="nextQuestion()" style="display:none;">Next</button>
  </div>
  
  <div id="result" class="result-box"></div>

  <script>
    const quiz = [
      // Maths
      { q: "What is the square root of 81?", options: ["9", "8", "7", "6"], answer: "9" },
      { q: "Solve: 5 × (3 + 2)", options: ["25", "20", "15", "30"], answer: "25" },
      { q: "What is 1/2 + 1/4?", options: ["3/4", "1", "2/3", "5/8"], answer: "3/4" },
      { q: "What is 30% of 200?", options: ["60", "30", "20", "90"], answer: "60" },

      // General Knowledge
      { q: "How many continents are there?", options: ["5", "6", "7", "8"], answer: "7" },

      // English
      { q: "Choose the correct sentence:", options: ["Their going home", "They’re going home", "There going home", "They is going home"], answer: "They’re going home" },
      { q: "What is a synonym for 'brave'?", options: ["Cowardly", "Timid", "Fearless", "Shy"], answer: "Fearless" },
      { q: "What type of word is 'quickly'?", options: ["Noun", "Verb", "Adverb", "Adjective"], answer: "Adverb" },
      { q: "Which is a metaphor?", options: ["As fast as a cheetah", "The classroom was a zoo", "Like a lion", "Loud like thunder"], answer: "The classroom was a zoo" },

      // General Knowledge
      { q: "Which animal is known as the 'King of the Jungle'?", options: ["Tiger", "Elephant", "Lion", "Cheetah"], answer: "Lion" },

      // Science
      { q: "Which organ pumps blood?", options: ["Liver", "Brain", "Heart", "Lungs"], answer: "Heart" },
      { q: "What is H2O?", options: ["Oxygen", "Hydrogen", "Water", "Salt"], answer: "Water" },
      { q: "Which force pulls objects toward Earth?", options: ["Magnetism", "Gravity", "Friction", "Energy"], answer: "Gravity" },
      { q: "Which gas do humans need to breathe?", options: ["Nitrogen", "Carbon Dioxide", "Oxygen", "Helium"], answer: "Oxygen" },

      // General Knowledge
      { q: "What is the capital city of France?", options: ["Paris", "Berlin", "Rome", "Madrid"], answer: "Paris" },

      // Geography / History
      { q: "Which ocean is west of the UK?", options: ["Atlantic", "Indian", "Arctic", "Pacific"], answer: "Atlantic" },
      { q: "Who was the first Tudor King?", options: ["Henry VIII", "Henry VII", "Edward VI", "James I"], answer: "Henry VII" },
      { q: "Which country is famous for the Great Wall?", options: ["India", "China", "Egypt", "Japan"], answer: "China" },
      { q: "What is the capital of Scotland?", options: ["Glasgow", "Cardiff", "Edinburgh", "Aberdeen"], answer: "Edinburgh" },

      // General Knowledge
      { q: "How many legs does a spider have?", options: ["6", "8", "10", "12"], answer: "8" },
    ];

    let currentQuestion = 0;
    let correctAnswers = 0;
    let timer;
    let timeLeft = 45;

    function startTimer() {
      timeLeft = 45;
      document.getElementById("timer").textContent = `Time Left: ${timeLeft} seconds`;
      timer = setInterval(() => {
        timeLeft--;
        document.getElementById("timer").textContent = `Time Left: ${timeLeft} seconds`;
        if (timeLeft <= 0) {
          clearInterval(timer);
          showFeedback(null);
        }
      }, 1000);
    }

    function loadQuestion() {
      const q = quiz[currentQuestion];
      document.getElementById("feedback").innerHTML = "";
      document.getElementById("next-btn").style.display = "none";
      document.getElementById("question").innerHTML = `<strong>Q${currentQuestion + 1}:</strong> ${q.q}`;
      document.getElementById("options").innerHTML = q.options.map(opt => 
        `<label class="option"><input type="radio" name="option" value="${opt}"> ${opt}</label>`
      ).join("");
      startTimer();
    }

    function showFeedback(selectedValue) {
      clearInterval(timer);
      const correct = quiz[currentQuestion].answer;
      const feedback = document.getElementById("feedback");
      if (selectedValue === correct) {
        feedback.innerHTML = "✅ Correct!";
        correctAnswers++;
      } else if (selectedValue === null) {
        feedback.innerHTML = `⏰ Time's up! Correct answer: ${correct}`;
      } else {
        feedback.innerHTML = `❌ Incorrect! Correct answer: ${correct}`;
      }
      document.getElementById("next-btn").style.display = "inline-block";
    }

    document.getElementById("options").addEventListener("change", function(e) {
      const selected = document.querySelector('input[name="option"]:checked').value;
      showFeedback(selected);
    });

    function nextQuestion() {
      currentQuestion++;
      if (currentQuestion < quiz.length) {
        loadQuestion();
      } else {
        showResult();
      }
    }

    function showResult() {
      document.getElementById("quiz-container").style.display = "none";
      document.getElementById("result").innerHTML = `
        <h2>Quiz Complete!</h2>
        <p>You got ${correctAnswers} out of ${quiz.length} correct.</p>
        <p>Percentage: ${Math.round((correctAnswers / quiz.length) * 100)}%</p>
      `;
    }

    // Start quiz
    loadQuestion();
  </script>
</body>
</html>
